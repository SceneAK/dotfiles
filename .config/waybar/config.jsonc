    "niri/workspaces": {
	    "current-only": true,
	    "format": "{icon}",
	    "format-icons": {
		    "1": "‰∏Ä",
		    "2": "‰∫å",
		    "3": "‰∏â",
		    "4": "Âõõ",
		    "5": "‰∫î",
