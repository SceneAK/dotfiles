	    }
    },
    "custom/cworkspaces":{
        "format": "{text}",
        "exec": "$HOME/.config/waybar/scripts/cworkspaces",
        "return-type": "json"
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "Ôãí"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "mpd": {
        "format": "{stateIcon}{consumeIcon}{randomIcon}{repeatIcon}{singleIcon} {title} ÔÄÅ",
        "format-disconnected": "Disconnected ÔÄÅ",
        "format-stopped": "{consumeIcon} {randomIcon} {repeatIcon} {singleIcon} Stopped ÔÄÅ",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": {
            "on": " ÔÉÑ"
        },
        "random-icons": {
            "on": " ÔÅ¥"
        },
        "repeat-icons": {
            "on": " ÔÄû"
        },
        "single-icons": {
            "on": " ÔÄû1"
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "Artist: {artist}\nAlbum: {album} \n({elapsedTime:%M:%S}/{totalTime:%M:%S}) | ({songPosition}/{queueLength})\n\nMPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)",
        "on-click": "mpc toggle",
        "title-len": 40,
        "ellipsis": "‚Ä¶"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock#time": {
        // "timezone": "America/New_York",
        "format": "{:%H:%M}",
        "tooltip-format": "{:%H:%M:%S}\nTime is waktu",
        "interval": 1
    },
    "clock#date": {
        // "timezone": "America/New_York",
        "format": "{:%a,%e %b %Y}",
        "tooltip-format": "<big>What's up?</big>\n<tt><small>{calendar}</small></tt>"
    },
    "temperature": {
        // "thermal-zone": 2,
        "hwmon-path": "/sys/class/hwmon/hwmon4/temp1_input",
        "critical-threshold": 82,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
        "tooltip-format": "~90¬∞C under load is normal for Ryzen 5000, apparently",
        "interval": 4
    },
    "cpu": {
